{{! Scripts for changing the textarea on the page to include rich text}}
<script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>
<script type="text/javascript">bkLib.onDomLoaded(nicEditors.allTextAreas);</script>

{{! Page Description}}
<div class="form-group row" style="padding: 15px;">
  <label for="pageDesc">Page Description:</label>
  <input class="form-control" type="text" id="pageDesc" value="{{page.pageDesc}}">
</div><hr>

{{! Rich Text box and File selector for media}}
<div id="media" class="group">
  <div class="form-group">
    <label for="textPage">Add Text:</label>
    <textarea class="form-control" rows="5" id="comment"></textarea>
  </div>
  <label class="custom-file"> Add Media
    <input type="file" id="file" class="custom-file-input">
    <span class="custom-file-control"></span>
  </label>
</div>

<br>
<a class="btn btn-default" href="/training/EditTraining/{{id}}">Cancel</a>
<button type="button" class="btn btn-primary">Save changes</button>